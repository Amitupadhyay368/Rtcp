<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient3"
    android:layout_height="match_parent"
    tools:context=".basicsscreen5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C++ if-else"
            android:background="#000000"
            android:textColor="#F5D92E"
            android:id="@+id/tutorial10"
            android:gravity="center"
            android:textSize="30dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgelse"
            android:layout_below="@id/tutorial10"
            android:src="@drawable/next6"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next6"
            android:layout_below="@id/imgelse"
            android:layout_marginLeft="150dp"
            android:text="Next"
            android:background="#000000"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>

</ScrollView>