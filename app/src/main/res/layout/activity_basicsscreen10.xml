<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient3"
    tools:context=".basicsscreen10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C++ call by refference"
            android:background="#000000"
            android:textColor="#F5D92E"
            android:id="@+id/tutorial21"
            android:gravity="center"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tutorial21"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            android:text="@string/basictwelve"
            android:id="@+id/tutorial22"
            android:textSize="24dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tutorial22"
            android:src="@drawable/next13"
            android:id="@+id/imge"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imge"
            android:id="@+id/next13"
            android:layout_marginLeft="150dp"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:text="Next"
            />


    </RelativeLayout>

</ScrollView>