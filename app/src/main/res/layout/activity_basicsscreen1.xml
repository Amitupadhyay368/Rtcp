<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient3"
    tools:context=".basicsscreen1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C++ Variable:"
        android:background="#000000"
        android:textColor="#F5D92E"
        android:id="@+id/tutorial2"
        android:gravity="center"
        android:textSize="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tutorial3"
            android:textColor="#000000"
            android:layout_below="@id/tutorial2"
            android:text="@string/basicone"
            android:textSize="24dp"
            android:layout_marginTop="30dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/next1"
            android:layout_below="@id/tutorial3"
            android:layout_marginLeft="150dp"
            android:textColor="#FFFFFF"
            android:background="#000000"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backtomain"
            android:layout_below="@+id/tutorial3"
            android:text="Main Menu"
            android:background="#000000"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>
</ScrollView>