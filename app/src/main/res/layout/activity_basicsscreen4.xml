<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient3"
    tools:context=".basicsscreen4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C++ Keywords"
            android:background="#000000"
            android:textColor="#F5D92E"
            android:id="@+id/tutorial7"
            android:gravity="center"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textSize="24dp"
            android:textColor="#000000"
            android:id="@+id/tutorial8"
            android:text="@string/basicfour"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tablle"
            android:src="@drawable/tablle"
            android:layout_below="@id/tutorial8"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tutorial9"
            android:layout_below="@id/tablle"
            android:text="@string/basicfive"
            android:textSize="24dp"
            android:textColor="#000000"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next4"
            android:text="Next"
            android:layout_below="@id/tutorial9"
            android:layout_marginLeft="150dp"
            android:background="#000000"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>

</ScrollView>