<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".compsearching"
    android:background="@drawable/gradient3">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="searching"
            android:background="#000000"
            android:textColor="#F5D92E"
            android:id="@+id/compitetive6"
            android:gravity="center"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/compitetive7"
            android:layout_below="@id/compitetive6"
            android:textColor="#000000"
            android:layout_marginBottom="0dp"
            android:text="@string/searchingscr"
            android:layout_marginTop="20dp"
            android:textSize="24dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comp6"
            android:src="@drawable/comp6"
            android:layout_below="@id/compitetive7"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comp6"
            android:text="Next"
            android:layout_marginTop="30dp"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:id="@+id/next52"
            android:layout_marginLeft="150dp"/>

    </RelativeLayout>

</ScrollView>