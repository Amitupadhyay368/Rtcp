<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9E044FAB"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carouselView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:fillColor="#FFFFFFFF"
            app:pageColor="#00000000"
            app:radius="6dp"
            app:slideInterval="3000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:orientation="horizontal"></LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="159dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/card"
            android:layout_marginRight="30dp"
            app:cardBackgroundColor="#9E044FAB"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="489dp"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/basicsc"
                    android:layout_width="278dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/basicimg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#DA0000A0"
                    android:text="basics of C++"
                    android:textColor="#FFFFFF"
                    android:textSize="24dp" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"></LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="159dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/card1"
            android:layout_marginRight="30dp"
            app:cardBackgroundColor="#9E044FAB"
            app:cardCornerRadius="15dp">


            <ImageView
                android:id="@+id/compitetivec"
                android:layout_width="362dp"
                android:layout_height="204dp"
                app:srcCompat="@drawable/compitetive" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#DA0000A0"
                android:text="compitetive of C++"
                android:textColor="#FFFFFF"
                android:textSize="24dp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>