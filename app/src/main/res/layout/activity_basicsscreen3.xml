<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient3"
    android:layout_height="match_parent"
    tools:context=".basicsscreen3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C++ Operators:"
            android:background="#000000"
            android:textColor="#F5D92E"
            android:id="@+id/tutorial5"
            android:gravity="center"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/basicthree"
            android:textColor="#000000"
            android:layout_marginTop="50dp"
            android:textSize="24dp"
            android:id="@+id/tutorial6"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tabble"
            android:src="@drawable/tabble"
            android:layout_below="@id/tutorial6"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next3"
            android:layout_below="@id/tabble"
            android:layout_marginLeft="150dp"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:text="Next"/>



    </RelativeLayout>

</ScrollView>