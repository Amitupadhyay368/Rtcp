<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".basicscreen13"
    android:background="@drawable/gradient3">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C++ Array"
            android:background="#000000"
            android:textColor="#F5D92E"
            android:id="@+id/tutorial25"
            android:gravity="center"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tutorial25"
            android:layout_marginTop="30dp"
            android:textSize="24dp"
            android:textColor="#000000"
            android:id="@+id/tutorial26"
            android:text="@string/basicfifteen"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tutorial26"
            android:src="@drawable/next16"
            android:id="@+id/imagegg"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagegg"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="150dp"
            android:layout_marginBottom="0dp"
            android:background="#000000"
            android:text="Next"
            android:textColor="#FFFFFF"
            android:id="@+id/next16"
            />





    </RelativeLayout>

</ScrollView>