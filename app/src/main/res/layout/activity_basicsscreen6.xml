<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".basicsscreen6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C++ switch"
            android:background="#000000"
            android:textColor="#F5D92E"
            android:id="@+id/tutorial11"
            android:gravity="center"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tutorial11"
            android:text="@string/basicsix"
            android:textSize="24dp"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            android:id="@+id/tutorial12"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgswitch"
            android:layout_below="@id/tutorial12"
            android:src="@drawable/next7"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next7"
            android:layout_below="@id/imgswitch"
            android:layout_marginLeft="150dp"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:text="Next"/>
    </RelativeLayout>

</ScrollView>