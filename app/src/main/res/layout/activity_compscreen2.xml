<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".compscreen2"
    android:background="@drawable/gradient3">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sorting"
            android:background="#000000"
            android:textColor="#F5D92E"
            android:id="@+id/compitetive4"
            android:gravity="center"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/compitetive5"
            android:layout_below="@id/compitetive4"
            android:textColor="#000000"
            android:layout_marginBottom="0dp"
            android:text="@string/screencomp"
            android:layout_marginTop="20dp"
            android:textSize="24dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/compscr"
            android:src="@drawable/comp5"
            android:layout_below="@id/compitetive5"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/compscr"
            android:text="Next"
            android:layout_marginTop="30dp"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:id="@+id/next51"
            android:layout_marginLeft="150dp"/>

    </RelativeLayout>


</ScrollView>