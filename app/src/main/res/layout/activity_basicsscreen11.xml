<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient3"
    tools:context=".basicsscreen11">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C++ Recursion"
            android:background="#000000"
            android:textColor="#F5D92E"
            android:id="@+id/tutorial23"
            android:gravity="center"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tutorial23"
            android:layout_marginTop="30dp"
            android:text="@string/basictherteen"
            android:textColor="#000000"
            android:textSize="24dp"
            android:id="@+id/tutorial24"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tutorial24"
            android:src="@drawable/next14"
            android:id="@+id/image12"
            />

        <Button
            android:id="@+id/next14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image12"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="150dp"
            android:layout_marginBottom="0dp"
            android:background="#000000"
            android:text="Next"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

</ScrollView>